    <style> #intro-image {display:none} </style>
    <style> #card-show {display:none} </style>
    <div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Article</h3>
  </div>
  <div class="panel-body">
  <% if logged_in? %>  
            <nav class="cd-stretchy-nav edit-content">
            <a class="cd-nav-trigger" href="">
            </a>
            <ul>
                <li><%= link_to raw("<i class=\"fa fa-pencil\"></i>"), edit_article_path(@article),'data-toggle' => "tooltip", 'data-placement' => "left", 'title' => "Edit Article" %></li>
                <li> <%= link_to raw("<i class=\"fa fa-trash\"></i>") , @article, method: :delete, data: { confirm: 'Are you sure?' }, :form => { :id => "button-delete" },'data-toggle' => "tooltip", 'data-placement' => "left", 'title' => "Delete Article" %></li>
            </ul>
            <span aria-hidden="true" class="stretchy-nav-bg"></span>
        </nav>
                <% end %>
    <span class="label label-info total-count">
        View Counts:<%=@article.impression_count %> 
            </span>
        <h4 class="card-title" style="margin-left:10px"><%= @article.title %></h4>                    
            <p class="card-text"><%= @markdown.render(@article.body).html_safe %></p>                       
    </div>
        <div class="card-footer text-muted " style="height: 50px;overflow:hidden;">              
            <p class="col-md-6 text-xs-left" style="margin-bottom:0px;">
                Tags:
                    <% @article.tags.each do |tag| %>
                        <%= link_to tag.name, tag_path(tag), class:'label label-default' %>
                        <% end %>
                    </p>            
                </div>
  </div>
</div>
</div>
    <div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Comment Section</h3>
  </div>
  <div class="comment-panel">
  <div class="panel-body">
    <div class="card-header"> Comments (<%= @article.comments.size %>)</div>
            <div class="card-block" style="padding-right:200px">
                <div class="card-text">
                    <%= render partial: 'articles/comment', collection: @article.comments %>   
                    <%= render partial: 'comments/form' %>   
                </div>    
            </div>
        </div>
  </div>
</div>
           