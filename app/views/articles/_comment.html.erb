<div class="row" style="margin-bottom:30px;">
    <div class="col-md-2">
            <%= image_tag("user_avatar.png", :alt => "Sidebar Image", class: 'user-avatar') %>
                <% if logged_in? %>
                    <%= button_to 'Delete', [@article, comment], method: :delete, data: { confirm: 'Are you sure?' },class:'comment-delete'  %>
                <% end %>
    </div>
<div class="col-md-10" style="padding-left:0px;">
    <span class="label label-default pull-left"><%= comment.user_name %></span>
          <div class="comment"><%= comment.body %></div>
    </div>
</div>