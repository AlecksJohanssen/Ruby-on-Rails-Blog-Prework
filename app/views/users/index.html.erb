
<div class="col-md-12" style="margin-top:50px"> 
    <div class="card" style="margin-left:25rem">
    <div class="card-header"> 
    Listing Users
    </div>
    <div class="card-block">
        <table class="table table-striped">
  <thead class="thead">
    <tr>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
          <td><%= link_to raw('<i class="fa fa-external-link-square"></i>  Show'), user,class:'btn btn-sm btn-info-outline' %>
              <%= link_to raw('<i class="fa fa-pencil-square"></i>  Edit'), edit_user_path(user), class:'btn btn-sm btn-warning-outline' %>
              <%= link_to raw('<i class="fa fa-minus-square"></i>  Delete'), user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-sm btn-danger-outline'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
    <div class="card-footer text-xs-right">
        <%= link_to raw('<i class="fa fa-plus"></i>  New User'), new_user_path, class:'btn btn-sm btn-success' %>
    </div>
    </div>


<br>

</div>



